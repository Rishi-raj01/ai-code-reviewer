{
  "version": 2,
  "builds": [
    { "src": "backend/server.js", "use": "@vercel/node" },
    { "src": "client/build/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/ai/(.*)", "dest": "backend/server.js" },
    { "src": "/(.*)", "dest": "/client/build/index.html" }
  ]
}
